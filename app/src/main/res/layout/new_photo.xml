<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Next"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/camera_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/curr_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ja.burhanrashid52.photoeditor.PhotoEditorView
            android:id="@+id/recent_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/filter_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/edited_one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
            <ImageView
                android:id="@+id/edited_two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
            <ImageView
                android:id="@+id/edited_three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/edited_four"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
            <ImageView
                android:id="@+id/edited_five"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
            <ImageView
                android:id="@+id/edited_six"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blank_person"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
